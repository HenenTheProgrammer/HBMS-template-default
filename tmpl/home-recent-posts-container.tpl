<!--forEach[latest_posts]-->
 <div class="container">

     <article class="section new-post">
         <div class="image"><img src="<!--{FeatureImage}-->" alt="<!--{Title}-->" width="100"/> </div>
         <div class="content">
             <h4 class="title"><!--{Title}--></h4>
             <ul class="keywords">
                 <!--{Labels}-->
             </ul>
             <time class="date"><!--{PostTime}--></time>
             <p class="text"><!--{Content}--></p>
             <div class="options">
                 <a href="read/<!--{URI}-->" class="button bordered">Read...</a>
                 <button class="button"><i class="fa fa-share"></i></button>
             </div>
         </div>
     </article>

 </div>
 <!--end[latest_posts]-->